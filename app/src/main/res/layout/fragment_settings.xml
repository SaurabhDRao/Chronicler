<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.SettingsFragment"
    android:background="@color/backgroundColor">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/settings_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/backgroundColorLight"
        android:padding="15dp"
        android:text="My Profile"
        android:textColor="#ccc"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/settings_change_password"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/settings_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColorLight"
        android:padding="15dp"
        android:text="Change lock points"
        android:textColor="#ccc"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>